{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %} Explore ATX | {{ name }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
        <h1>{{ name }}</h1>
    </div>
    <div>
      <img src="../img/landmarks/{{ image }}" alt="{{ name }}" class="img-fluid">
      <p>{{ location }}<br>
      <span>{{ established }}</span></p>
      <p>{{ description | safe }}</p>
      <p>{{ activities }}</p>
      <hr class="d-sm-none">
      {{ prose(post) }}
    </div>
  </article>
{% endblock %}
