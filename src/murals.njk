{% extends '_templates/base.njk' %}

{% block page_title %}Murals{% endblock %}

{% block page_description %}Discover the colorful soul of Austin through its collection of murals, a vibrant canvas that reflects the city's spirit and imagination.{% endblock %}

{% block content %}
<article class="container">
  <h1>Murals</h1>
  <p>Discover the colorful soul of Austin through its collection of murals, a vibrant canvas that reflects the city's spirit and imagination.</p>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Latitude</th>
                        <th scope="col">Longitude</th>
                        <th scope="col">Google Maps</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                {% for mural in austin.murals %}
                    <tr>
                        <th scope="row">{{ mural.name }}</th>
                        <td>{{ mural.address }}</td>
                        <td>{{ mural.latitude }}</td>
                        <td>{{ mural.longitude }}</td>
                        <td><a href="{{ mural.map_location }}" target="_blank">Get Directions</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</article>
{% endblock %}